{
  "models": {
    "providers": {
      "${LLM_PROVIDER}": {
        "baseUrl": "${LLM_BASE_URL}",
        "apiKey": "${LLM_API_KEY}",
        "api": "${LLM_API_TYPE}",
        "models": [
          {
            "id": "${LLM_MODEL_ID}",
            "name": "${LLM_MODEL_ID}",
            "reasoning": false,
            "input": ["text"],
            "cost": {
              "input": 0,
              "output": 0,
              "cacheRead": 0,
              "cacheWrite": 0
            },
            "contextWindow": 200000,
            "maxTokens": 8192
          }
        ]
      }
    }
  },
  "agents": {
    "defaults": {
      "model": {
        "primary": "${LLM_PROVIDER}/${LLM_MODEL_ID}"
      },
      "workspace": "${OPENCLAW_DATA_DIR}/workspace",
      "compaction": {
        "mode": "safeguard"
      },
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      },
      "sandbox": {
        "mode": "all",
        "scope": "agent",
        "workspaceAccess": "rw",
        "docker": {
          "network": "bridge",
          "readOnlyRoot": true
        },
        "prune": {
          "idleHours": 87600,
          "maxAgeDays": 3650
        }
      },
      "userTimezone": "${USER_TIMEZONE}",
      "timeFormat": "${TIME_FORMAT}"
    },
    "list": []
  },
  "messages": {
    "ackReactionScope": "group-mentions"
  },
  "commands": {
    "native": "auto",
    "nativeSkills": "auto"
  },
  "hooks": {
    "internal": {
      "enabled": true,
      "entries": {
        "boot-md": {
          "enabled": true
        },
        "command-logger": {
          "enabled": true
        },
        "session-memory": {
          "enabled": true
        }
      }
    }
  },
  "channels": {
    "wecom": {
      "enabled": true,
      "token": "${WECOM_TOKEN}",
      "encodingAesKey": "${WECOM_ENCODING_AES_KEY}",
      "commands": {
        "enabled": true,
        "allowlist": ["/new", "/status", "/help", "/compact"]
      }
    }
  },
  "gateway": {
    "port": ${GATEWAY_PORT},
    "mode": "${GATEWAY_MODE}",
    "bind": "${GATEWAY_BIND}",
    "controlUi": {
      "allowInsecureAuth": true
    },
    "auth": {
      "mode": "token",
      "token": "${GATEWAY_AUTH_TOKEN}"
    },
    "tailscale": {
      "mode": "off",
      "resetOnExit": false
    }
  },
  "skills": {
    "install": {
      "nodeManager": "npm"
    }
  },
  "plugins": {
    "entries": {
      "openclaw-plugin-wecom": {
        "enabled": true
      }
    }
  },
  "bindings": [],
  "canvasHost": {
    "root": "${OPENCLAW_DATA_DIR}/canvas"
  }
}
